
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/salesforce-lightning-design-system.min.css" rel="stylesheet" type="text/css">
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/App.js"></script>
    <link href="~/Content/App.css" rel="stylesheet" type="text/css">

    <title>@Resources.AppResource.AppTitle</title>

</head>
<body class="slds-box slds-theme_shade" onload="setTimeout(reLoad, 61000);">
    <article class="slds-card">
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
                <div class="slds-media__figure">
                    <span>
                        <img src="~/Content/logo.svg" class="slds-icon slds-icon_small" />
                    </span>
                </div>
                <div class="slds-media__body">
                    <h2>
                        <a href="javascript:void(0);" class="slds-card__header-link slds-truncate" title="[object Object]">
                            <span class="slds-text-heading_small">@Resources.AppResource.SFFeedApp</span>
                        </a>
                    </h2>
                </div>
            </header>
        </div>
    </article>

    <div class="slds-card-wrapper slds-brand-band slds-brand-band_large slds-box slds-theme_shade lineBreak" >
        <header>
            <h2 class="slds-text-heading_medium">@Resources.AppResource.listofTweets</h2>

            <div class="slds-form-element inputBox">
                <label class="slds-form-element__label" for="text-input-id-1">@Resources.AppResource.TweetsFilter</label>
                <div class="slds-form-element__control">
                    <input type="text" id="FiltertweetId" class="slds-input" placeholder="Enter the Filter Text" onkeyup="FilterTweets()" />
                </div>
            </div>
        </header>

        @if (ViewBag.Tweets != null)
        {
           
            <ul id="ListofTweets">
           
                @foreach (var tweet in ViewBag.Tweets)
                {
                    <li style="padding:10px">

                        <article class="slds-card">
                            <div class="slds-card__header slds-grid">
                                <header class="slds-media slds-media_center slds-has-flexi-truncate">
                                    <div class="slds-media__figure paddingTweetsHeader">
                                        <span class="slds-avatar slds-avatar_large">
                                            <img alt="Person name" src="@tweet.User.ProfileImageUrl" title="User avatar" />
                                        </span>

                                    </div>
                                    <div class="slds-media__body">
                                        <h2>
                                            <span class="slds-text-title_caps" id="tweet">@tweet.User.Name - @tweet.CreatedDate</span>
                                        </h2>
                                        <h2>
                                            <a href="javascript:void(0);" class="slds-card__header-link slds-truncate" title="[object Object]">
                                                <span class="slds-text-title colorScreenName">@tweet.User.ScreenName</span>
                                            </a>
                                        </h2>
                                    </div>
                                </header>

                            </div>
                            <div class=" paddingTweetsbody slds-card__body slds-card__body_inner ">@tweet.TextDecoded</div>
                            <footer class="slds-card__footer slds-border_bottom">
                                <div class="slds-text-align_left slds-text-title paddingTweetsHeader">@Resources.AppResource.RetweetCount @tweet.RetweetCount</div>
                            </footer>
                        </article>

                    </li>
                }

            </ul>

        }

    </div>
  
</body>
</html>
